
@{
    ViewBag.Title = "DersEkle";
    Layout = "~/Views/Shared/_OgrenciIsleri.cshtml";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-grid.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>

    <div class="container">

        <div class="row">
            <div class="col-md-12">

                @using (Html.BeginForm("DersKaydet", "OgrenciIsleri", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Öğrenci</label>
                        <select class="form-control" id="exampleFormControlSelect1" name="selectogrenci">
                            @foreach (var item in Model.tblOgrencis)
                            {
                                <option value="@item.ogrenciid">@item.ogrenciad</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Ders</label>
                        <select class="form-control" id="exampleFormControlSelect1" name="selectders">
                            <option>Lütfen ders seçiniz</option>
                            @foreach (var item in Model.tblDerss)
                            {
                                <option name="ders" value="@item.dersid" data-id="@item.dersid">@item.dersad</option>

                            }
                        </select>
                    </div>
                    <button class="btn btn-success" id="dersekle" type="submit"> Ders Kaydet</button>

                }

            </div>
        </div>
    </div>
    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap4.min.js"></script>
