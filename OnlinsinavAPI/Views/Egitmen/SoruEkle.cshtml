
@{
    ViewBag.Title = "SoruEkle";
    Layout = "~/Views/Shared/_Egitmen.cshtml";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-grid.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap-grid.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.js"></script>

<div class="container">

    <div class="row">
        <div class="col-md-12">

            @using (Html.BeginForm("SoruKaydet", "Egitmen", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Egitmen</label>
                    <select class="form-control" id="exampleFormControlSelect1" name="selectders">
                        @foreach (var item in Model.tblDerss)
                        {
                            <option value="@item.dersid">@item.dersad</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label for="exampleFormControlInput1">Soru</label>
                    <textarea class="form-control mb-2" placeholder="Soru" name="soru" style="height:150px;"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">A</label>
                    <textarea class="form-control mb-2" placeholder="Soru" name="A" style="height:150px;"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">B</label>
                    <textarea class="form-control mb-2" placeholder="Soru" name="B" style="height:150px;"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">C</label>
                    <textarea class="form-control mb-2" placeholder="Soru" name="C" style="height:150px;"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">D</label>
                    <textarea class="form-control mb-2" placeholder="Soru" name="D" style="height:150px;"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">E</label>
                    <textarea class="form-control mb-2" placeholder="Soru" name="E" style="height:150px;"></textarea>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect1">Doğru Cevap</label>
                    <select class="form-control" id="exampleFormControlSelect1" name="dogru_cevap">

                        <option>A</option>
                        <option>B</option>
                        <option>C</option>
                        <option>D</option>
                        <option>E</option>

                    </select>
                </div>

                <button class="btn btn-success" id="dersekle" type="submit"> Soru Kaydet</button>

            }

        </div>
    </div>
</div>
<script src="~/Scripts/bootbox.js"></script>
<script src="~/Scripts/bootbox.min.js"></script>
<script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/DataTables/dataTables.bootstrap4.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<script>

</script>

